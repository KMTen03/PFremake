<h4>投稿フォーム</h4>
  <!--投稿の本文-->
  <%= form_with model: post do |f| %>
    <div class='from-group'>
      <br>
        <%= f.text_field :title, placeholder: 'タイトル' %><br>
      <br>
        <%= f.text_area :content, placeholder: 'コンテンツ' %><br>
      <br>
        <%= f.number_field :time, size: "25", placeholder: '時間' %></br>
      <br>
    </div>
    <!--タグ投稿フォーム-->
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, include_hidden: false) do |tag| %>
      <div class='form-check'>
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
      </div>
    <% end %>
    <!--投稿ボタン-->
    <%= button_tag type: "submit", class:"btn btn-info" do %>
      <i class="fa-solid fa-pen-to-square"></i>投稿する
    <% end %>
  <% end %>
