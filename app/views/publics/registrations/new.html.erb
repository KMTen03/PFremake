<%= render 'layouts/message', resource: resource %>
<div class='container'>
  <div class='card-container'>
    <div class='card-body'>
      <h3>新規会員登録</h3>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class='form-group'>
          <div class='input-group'>
            <%= f.text_field :name, placeholder: 'ユーザー名' %><br/>
          </div><!--input-group-->
        </div><!--form-group-->
        <div class='form-group'>
          <div class='input-group'>
            <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス' %><br/>
          </div><!--input-group-->
        </div><!--form-group-->
        <div class='form-group'>
          <div class='input-group'>
              <%#if @minimum_password_length %>
                <!--<em><%#= @minimum_password_length %></em>-->
              <%# end %>
            <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'パスワード(6文字以上)' %><br/>
          </div><!--input-group-->
        </div><!--form-group-->
        <div class='form-group'>
          <div class='input-group'>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'パスワード(確認用)' %><br/>
          </div><!--input-group-->
        </div><!--form-group-->
        <div class='actions'>
          <%= f.submit '新規登録', class:'btn btn-success' %><br/>
        </div>
      <% end %>

<%= render 'publics/shared/links' %>
