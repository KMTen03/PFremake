<%= render 'layouts/message'%>
<!--エラーメッセージ-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-7'>
      <h4>このサイトについて</h4>
    </div><!--col-->
    <div class='col-md-4 offset-md-1'>
      <h3>ログイン</h3>
      
      <%= form_with model: @user, url: user_session_path do |f| %>
      
        <div class='form-group'>
          <%= f.label :email, 'メールアドレス' %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email' %><br/>
        </div><!--form-group-->
        <div class='form-group'>
          <%= f.label :password, 'パスワード' %><br/>
          <%= f.password_field :password, autocomplete: 'current-password' %><br/>
        </div><!--form-group-->
        <div class='actions'>
          <%= f.submit 'ログイン', class:'btn btn-primary' %>
        </div><!--actions-->
        
      <% end %>
      
      <%= render 'publics/shared/links' %>
      
    </div><!--col-->
  </div><!--row-->
</div><!--container-->